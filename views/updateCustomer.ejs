<div class="card">
    <div class="card-header">
        <h4 class="font-weight-bold">Edit Employees</h4>
    </div>
    <div class="card-body">
        <form action="/updateCustomer/<%= customer._id %>" method="post">
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label class="col-form-label" for="name">Name</label>
                        <input type="text" class="form-control" value="<%= customer.name %>" name="name" placeholder="name" id="name">
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label class="col-form-label" for="email">Email</label>
                        <input type="text" class="form-control" value="<%= customer.email %>" name="email" placeholder="email" id="email">
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label class="col-form-label" for="address">Address</label>
                        <input class="form-control" name="address" id="address" rows="3">
                        <%= customer.address %>
                        
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label class="col-form-label" for="phone">Phone</label>
                        <input type="number" class="form-control" value="<%= customer.phone %>" name="phone" placeholder="enter your phone number" id="phone">
                    </div>
                </div>
            </div>
            <div class="float-right">
                <button type="submit" class="btn btn-danger">Update</button>
                <a href="/" class="btn btn-light">Cancel</a>
            </div>
        </form>
    </div>
</div>
